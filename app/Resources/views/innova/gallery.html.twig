{% extends 'section_layout.html.twig' %}

{% block body %}

    {% block section_header %}
        <div class="header" data-paroller-factor="0.4" style="background-image:url({{ asset('img/lights.jpg') }})">
            <div class="overlay"></div>
            <div class="container">
                <h2>Galería</h2>
                <p>Algunas de nuestras aplicaciones</p>
            </div>
        </div>
    {% endblock %}

    {% block section_breadcrumb %}
        {{ parent() }}
    {% endblock %}

    {% block section_body %}

        <div class="container main">
            <div class="row">
                <div class="col-xs-12">

                </div>
            </div>
            <div class="row no-gutters gallery">
                {% if projects | length > 0%}
                {% for project in projects %}
                    <div class="col-md-6 col-lg-4">
                        {% include ('innova/partials/project_item.html.twig')%}
                    </div>
                {% endfor %}
                {% else %}
                    <p>Próximamente</p>
                {% endif %}

            </div>

        </div><!-- /.container -->

    {% endblock %}


{% endblock %}
