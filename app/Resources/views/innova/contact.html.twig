{% extends 'base.html.twig' %}

{% block body %}

    <div class="header">
        <div class="container">
            <h2>Contacto</h2>
            <p>Lorem ipsum dolor sit amet</p>
        </div>
    </div>

    <div class="container marketing">

        <!-- Three columns of text below the carousel -->
        <div class="row">

            <div class="col-lg-12">
                <div class="contact-form">

                    {{ form_start(form, {'attr': {'id': 'contact_form'}}) }}

                    <div style="margin-bottom: 15px;">
                        {{ form_widget(form.subject) }}
                        {{ form_errors(form.subject) }}
                    </div>
                    <div style="margin-bottom: 15px;">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div style="margin-bottom: 15px;">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div style="margin-bottom: 15px;">
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </div>

                    {# Render CSRF token etc .#}
                    <div style="display:none">
                        {{ form_rest(form) }}
                    </div>

                    <input type="submit" value="Enviar mensaje" class="btn btn-primary">

                    {{ form_end(form) }}
                </div><!-- contact-form-->

            </div><!-- /.col-lg-12 -->

        </div><!-- /.row -->

    </div><!-- /.container -->

    <div class="contact-map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m19!1m8!1m3!1d23928.70262187279!2d2.178531!3d41.4373159!3m2!1i1024!2i768!4f13.1!4m8!3e6!4m0!4m5!1s0x12a4bd205cfc6e55%3A0x6dbdb20b3eb7ac12!2sPasseig+d&#39;Andreu+Nin%2C+67%2C+08016+Barcelona!3m2!1d41.438621999999995!2d2.1829267!5e0!3m2!1ses!2ses!4v1502284171286" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>


{% endblock %}
