{% extends 'section_layout.html.twig' %}

{% block body %}

    {% block section_header %}
        <div class="header" style="background-image:url({{ asset('img/lights.jpg') }})">
            <div class="overlay"></div>
            <div class="container">
                <h2>Búsqueda</h2>
                <p>Encuentra el producto que estás buscando</p>
            </div>
        </div>
    {% endblock %}

    {% block section_breadcrumb %}
        {{ parent() }}
    {% endblock %}

    {% block section_body %}

        <div class="container main">

            <div class="results-list">
                <div class="row">
                    {% for product in products %}
                        <div class="col-lg-12">
                            {% include ('innova/partials/product_item.html.twig')%}
                        </div>
                    {% endfor %}

                    {% if products | length < 1 %}
                        <div class="col-lg-12">
                            <p>No se han encontrado resultados.</p>
                        </div>

                    {% endif %}
                </div>

            </div><!-- /.row -->


        </div><!-- /.container -->
    {% endblock %}

{% endblock %}
