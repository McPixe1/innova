{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <input type="text" placeholder="Usuario..." id="username" name="_username" value="{{ last_username }}" required="required" />

    <input type="password" placeholder="Contraseña..." id="password" name="_password" required="required" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Recuérdame</label>

    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="Iniciar sesión" />
</form>
